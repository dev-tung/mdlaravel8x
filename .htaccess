<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect requests to the public directory
    RewriteRule ^(.*)$ public/$1 [L]

    # Handle the case where the public folder is directly requested (e.g., http://example.com/public)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^public/(.*)$ public/index.php [L]
</IfModule>